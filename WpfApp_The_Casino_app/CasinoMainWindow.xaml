<Window x:Class="WpfApp_The_Casino_app.CasinoMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_The_Casino_app"
        mc:Ignorable="d"
        Title="Casino" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="OutputTextBox" Grid.Row="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        <Button Content="Restart" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Restart_Click" />
    </Grid>

</Window>
